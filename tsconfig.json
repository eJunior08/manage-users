{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "./src/types"],
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@router/*": ["./src/router/*"],
      "@domain/*": ["./src/domain/*"],
      "@models/*": ["./src/models/*"],
      "@theme/*": ["./src/theme/*"],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
