{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "./src/types"],
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@domain/*": ["./src/domain/*"],
      "@theme/*": ["./src/theme/*"],
      "@assets/*": ["./src/assets/*"],
      "@reducer/*": ["./src/reducer/*"],
      "@constants/*": ["./src/constants/*"],
      "@routes/*": ["./src/routes/*"],
      "@services/*": ["./src/services/*"],
      "@models/*": ["./src/models/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@test/*": ["./src/test/*"],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
